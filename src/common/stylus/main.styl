@media (min-device-pixel-ratio: 1.5)
  .border-1px
    &::after
      transform: scaleY(0.7)

@media (min-device-pixel-ratio: 2)
  .border-1px
    &::after
      transform: scaleY(0.5)

ellipsis()
  text-overflow: ellipsis
  white-space: nowrap
  overflow: hidden

.clearfix
  display: inline-block
  &:after
    display: block
    content: '.'
    height: 0
    line-height: 0
    clear: both
    visibility: hidden